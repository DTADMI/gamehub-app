# Backend base URL for API calls from the frontend
BACKEND_URL=http://localhost:8080

# Optional OAuth providers
# NEXTAUTH_URL=http://localhost:8080
NEXTAUTH_SECRET=change-me-in-prod

# Optional OAuth providers (uncomment and fill to enable buttons on /login)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Public runtime config (optional)
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# Optional Firebase (if you later enable it)
# NEXT_PUBLIC_FIREBASE_API_KEY=
# NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=
# NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
# NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
# NEXT_PUBLIC_FIREBASE_APP_ID=
# Stripe (test mode)
# NOTE: Do not commit real-looking keys (e.g., starting with pk_test_, sk_test_, whsec_)
# Use placeholders here and set real values in .env.local or CI secrets.
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=<your_publishable_key>
STRIPE_SECRET_KEY=<your_secret_key>
STRIPE_WEBHOOK_SECRET=<your_webhook_secret>

# i18n
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,fr

NEXT_PUBLIC_GITHUB_URL=https://github.com/DTADMI
NEXT_PUBLIC_LINKEDIN_URL=https://www.linkedin.com/in/darryl-ulrich-t-62358476/
NEXT_PUBLIC_CONTACT_EMAIL=dtadmi@gmail.com

# Explore page feature flags (frontend only)
# Set to "true" to enable the corresponding sections and carousel layout
NEXT_PUBLIC_FEATURE_EXPLORE_CAROUSELS=true
NEXT_PUBLIC_FEATURE_EXPLORE_SHOW_FEATURED=true
NEXT_PUBLIC_FEATURE_EXPLORE_SHOW_UPCOMING=true
NEXT_PUBLIC_FEATURE_EXPLORE_SHOW_PROJECTS_FEATURED=true
NEXT_PUBLIC_FEATURE_EXPLORE_SHOW_PROJECTS_COMING_SOON=true

# Frontend port (Next.js uses 3000 by default if you run `next dev` directly)
# Prefer: npm run dev (which sets -p 8080), or set PORT=8080 before `next dev`
# PORT=8080

# Backend auth and security (documented; set in backend service)
# Used by Spring Boot (backend). Configure these in your backend environment or Secret Manager in prod.
APP_JWT_SECRET=change-me
APP_JWT_EXPIRATION_MS=3600000
REFRESH_TOKEN_EXPIRATION_MS=1209600000

# CORS origins (comma-separated). Backend will allow these origins.
APP_CORS_ORIGINS=http://localhost:8080

# Redis (for leaderboards/presence/anti-cheat)
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
